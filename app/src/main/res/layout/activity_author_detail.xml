<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liji.jkidney.activity.post.ActAuthorDetail">

    <com.liji.jkidney.widget.CustomeHeadView
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.liji.jkidney.widget.CustomeHeadView>

    <com.liji.jkidney.widget.Recyclerview.MyNestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/head_bg"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/ic_author_bg" />

                <com.liji.jkidney.widget.RoundImageView
                    android:id="@+id/item_head_ico"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_infor_male"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item_tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/head_bg"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/item_head_ico"
                    android:text="我是黄金肾斗士"
                    android:textColor="@color/c_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/item_tv_asign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:text="三十年河东，三十年河西，莫欺少年穷！"
                    android:textColor="@color/c_999999"
                    android:textSize="14sp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </com.liji.jkidney.widget.Recyclerview.MyNestedScrollView>


</LinearLayout>
