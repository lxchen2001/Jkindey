<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.tool.ActComputeJigan">

    <com.liji.jkidney.widget.CustomeHeadView
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.liji.jkidney.widget.CustomeHeadView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="*基本概念"
                    android:textColor="@color/material_blue_personal_center_bg"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="      肌酐是肌酸的代谢产物，在成人体内含肌酐约100g，其中98%存在于肌肉，每天约更新2%，人体血液中肌酐的生成可有内、外源性两种，如在严格控制饮食条件和肌肉活动相对稳定的情况下，血浆肌酐的生成量和尿的排出量较恒定，其含量的变化主要受内源性肌酐的影响，而且肌酐大部分是从肾小球滤过，不被肾小管重吸收，排泌量很少，故肾单位时间内，把若干毫升血浆中的内生肌酐全部清除出去，称为内生肌酐清除率（Ccr）。内生肌酐清除率试验，可反映肾小球滤过功能和粗略估计有效肾单位的数量，故为测定肾损害的定量试验。因其操作方法简便，干扰因素较少，敏感性较高，为目前临床常用的较好的肾功能试验之一。  " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="*开始计算"
                    android:textColor="@color/material_blue_personal_center_bg"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_need_wihte"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="性别"
                            android:textColor="@color/c_333333"
                            android:textSize="16sp" />


                        <com.rey.material.widget.Switch
                            android:id="@+id/switch_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="false"
                            android:gravity="center"
                            android:padding="16dp"
                            app:v_styleId="@array/switches" />

                        <TextView
                            android:id="@+id/tv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="男"
                            android:textColor="@color/material_red_500"
                            android:textSize="16sp" />


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_arrow_right"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_need_wihte"
                                android:drawablePadding="2dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="年龄"
                                android:textColor="@color/c_333333"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <EditText
                            android:id="@+id/et_nianling"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:gravity="center_vertical"
                            android:inputType="numberDecimal"
                            android:textColor="@color/c_999999"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_arrow_right"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_need_wihte"
                                android:drawablePadding="2dp"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="体重(kg)"
                                android:textColor="@color/c_333333"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <EditText
                            android:id="@+id/et_tizhong"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:gravity="center_vertical"
                            android:inputType="numberDecimal"
                            android:textColor="@color/c_999999"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_arrow_right"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_need_wihte"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="肌酐单位"
                            android:textColor="@color/c_333333"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_mg"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="mg/dl"
                            android:textColor="@color/material_red_500"
                            android:textSize="16sp" />

                        <com.rey.material.widget.Switch
                            android:id="@+id/switch_danwei"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:gravity="center"
                            android:padding="16dp"
                            app:v_styleId="@array/switches" />

                        <TextView
                            android:id="@+id/tv_umol"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="umol/L"
                            android:textColor="@color/material_red_500"
                            android:textSize="16sp" />


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_arrow_right"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_jigan_danwei"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_need_wihte"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="肌酐(umol/L)"
                            android:textColor="@color/c_333333"
                            android:textSize="16sp" />


                        <EditText
                            android:id="@+id/et_jigan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:button="@null"
                            android:gravity="center_vertical"
                            android:inputType="numberDecimal"
                            android:textColor="@color/c_999999"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_arrow_right"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />


                    <Button
                        android:id="@+id/btn_compute"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/common_btn_tab_tool_background_selector"
                        android:text="开始计算"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="*计算结果"
                        android:textColor="@color/material_blue_personal_center_bg"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_need_wihte"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="CCR (ml/min)："
                            android:textColor="@color/c_333333"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/tv_result"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:textColor="@color/material_red_500"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_arrow_right"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_advice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="*参考"
                        android:textColor="@color/material_blue_personal_center_bg"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_need_wihte"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="正常范围"
                            android:textColor="@color/c_666666"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="80 — 120 ml/min"
                            android:textColor="@color/c_999999"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_need_wihte"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="肾功能轻微损害"
                            android:textColor="@color/c_333333"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="50 — 80 ml/min"
                            android:textColor="@color/material_red_500"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_need_wihte"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="肾功能中度损害"
                            android:textColor="@color/c_333333"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="30 — 50 ml/min"
                            android:textColor="@color/material_red_500"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_need_wihte"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="早期肾功能不全"
                            android:textColor="@color/c_333333"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="10 — 30 ml/min"
                            android:textColor="@color/material_red_500"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_need_wihte"
                            android:drawablePadding="2dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dp"
                            android:text="尿毒症期"
                            android:textColor="@color/c_333333"
                            android:textSize="16sp" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="小于10 ml/min"
                            android:textColor="@color/material_red_500"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:background="@color/c_dddddd" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="5dp"
                        android:text="计算结果仅供参考，病情诊断请遵医嘱"
                        android:textColor="@color/c_999999"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
