<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_background"
    tools:context="com.liji.jkidney.fragment.FragmentMy">

    <com.liji.jkidney.widget.CustomeHeadView
        android:id="@+id/headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.liji.jkidney.widget.CustomeHeadView>

    <RelativeLayout
        android:id="@+id/item_head_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/headview"
        android:background="@drawable/ic_my_bg">

        <com.liji.jkidney.widget.RoundImageView
            android:id="@+id/item_head_ico"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_infor_male" />

        <LinearLayout
            android:id="@+id/item_ll_login"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/item_head_ico"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_head_ico"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_ll_login_info"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/item_head_ico"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_head_ico"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lucky_boy"
                android:textColor="@color/material_blue_personal_center_bg"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="不以物喜，不以己悲"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/item_head_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_ll_fav"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_linearlayout_background_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/my_fav_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="收藏"
                android:textColor="@color/c_999999"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/half_transparent">

        </View>

        <LinearLayout
            android:id="@+id/item_ll_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/common_linearlayout_background_selector"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/my_setting_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="设置"
                android:textColor="@color/c_999999"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
