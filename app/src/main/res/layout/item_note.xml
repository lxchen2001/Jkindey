<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/check_info_bg_selector"
    android:orientation="vertical"
    android:padding="10dp">


    <TextView
        android:id="@+id/item_txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="2014-02-06 - 去南京"
        android:textColor="@color/material_blue_500"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_content_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="3"
        android:text="今天天气不错，打算去南京检查一下身体，最近感觉不错，继续努力保持，不能乱吃东西，要好好保养身体，不能乱搞。"
        android:textColor="@color/c_999999" />


</LinearLayout>